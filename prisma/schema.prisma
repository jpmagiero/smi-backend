generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Demand {
  id         Int           @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  status      DemandaStatus
  itens       DemandItem[]
}

model DemandItem {
  id        Int    @id @default(autoincrement())
  sku       String
  totalPlan Int
  demandId Int
  demand   Demand @relation(fields: [demandId], references: [id])
}

enum DemandaStatus {
  PLANNING
  IN_PROGRESS
  COMPLETED
}
